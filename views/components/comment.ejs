<div class="media">
    <div class="media-left">
        <a href="/posts?author=<%= comment.author._id %>">
            <img class="media-object img-circle" src="/uploads/<%= comment.author.avatar %>" alt="...">
        </a>
    </div>
    <div class="media-body">
        <div class="media-heading clearfix">
            <div class="pull-left">
                <small class="name">
                    <a href="/posts?author=<%= comment.author._id %>"><%= comment.author.username %></a>
                </small>
                <small class="time"><%= comment.createdTime.toLocaleString() %></small>
            </div>
            
            <%# 判断是否是当前登陆用户发表的文章 %> 
            <% if (user) { %>
                <% if (comment.author._id.toString() === user._id.toString()) { %>
                    <small class="pull-right delete">
                        <a href="/comments/<%= comment._id %>/remove">删除</a>
                    </small>
                <% } %>
            <% } %>

        </div>
        <div class="text-justify comment-content">
            <span><%= comment.content %></span>
        </div>
    </div>
</div>