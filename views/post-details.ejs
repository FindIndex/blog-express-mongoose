<%- include('./components/header') %> 
    <!-- 页面主体 -->

    <div class="container">

        <!-- 每篇文章一个行row -->
        <%- include('./components/post-content') %>

        <!-- 留言区域 -->
        <div class="row comment">
            <!-- 留言区域 -->
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">留言</div>
                    <div class="panel-body">

                        <!-- 每一条评论是一个媒体对象 -->
                        <% if (comments.length) { %>
                            <% comments.forEach(element => { %>
                                <%- include('./components/comment', {comment: element}) %>
                            <% }) %>
                        <% } else { %>
                            <small>骚年，这楼沙发是你的了。</small>
                        <% } %>
                        

                    </div>
                    <!-- 面板底部 -->
                    <div class="panel-footer clearfix">
                        <form action="/comments" method="POST">
                            <input type="text" name="postId" value="<%= post._id %>" class="hidden">
                            <div class="form-group">
                                <textarea type="text" rows="3" class="form-control" id="comment" name="content"
                                    placeholder="new comment"></textarea>
                            </div>

                            <button type="submit" class="btn btn-info form-control">发表留言</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

<%- include('./components/footer') %> 